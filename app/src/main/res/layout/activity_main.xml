<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="36dp"
        android:text="@string/Location"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/locationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cLocation"
        android:id="@+id/locationButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Event"
        android:id="@+id/textView2"
        android:layout_below="@+id/locationButton"
        android:layout_alignStart="@+id/locationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cEvent"
        android:id="@+id/eventButton"
        android:clickable="true"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/locationButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Date"
        android:id="@+id/textView3"
        android:layout_below="@+id/eventButton"
        android:layout_alignStart="@+id/dateButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cDate"
        android:id="@+id/dateButton"
        android:clickable="true"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/eventButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Search"
        android:id="@+id/searchButton"
        android:layout_below="@+id/dateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:height="50dp"
        android:width="200dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Browse"
        android:id="@+id/browseButton"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/searchButton"
        android:layout_alignStart="@+id/searchButton"
        android:clickable="true" />

</RelativeLayout>
